<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_wish"
            android:layout_width="match_parent"
            android:layout_height="654dp"
            android:layout_marginBottom="0dp">

        </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/nowish_linear"
        android:layout_width="match_parent"
        android:layout_height="654dp"
        android:layout_above="@+id/money_check"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/money_check"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nowish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nowish"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/money_check"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"

            android:background="@color/btncolor"
            android:gravity="bottom|end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginRight="5dp"

                android:text="@string/wishList_total"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:id="@+id/itemNumber"
                android:text="(1 items):"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="$0333.00"
                android:layout_marginLeft="180dp"
                android:layout_marginRight="10dp"
                android:id="@+id/money"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>



