<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="180dp" android:layout_height="320dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:paddingBottom="2dp"
    android:id="@+id/relativeLayout">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:id="@+id/image"
        android:layout_centerHorizontal="true"
        android:paddingTop="5dp"
        android:src="@color/btncolor"/>

    <TextView
        android:id="@+id/image_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:text="Product Title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/postalcode"
        android:text="Zip: xxxxx"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Shipping condition"
        android:id="@+id/shipping"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/cart"
        android:onClick="addOrRemoveWish"
        android:src="@drawable/car_plus" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shipping"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="conditions"
        android:id="@+id/condition"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/condition"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/price"
        android:textColor="@color/colorPrimary"
        android:text="$price"/>




</RelativeLayout>